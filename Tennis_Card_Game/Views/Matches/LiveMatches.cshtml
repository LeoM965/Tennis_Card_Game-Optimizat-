@model IEnumerable<Tennis_Card_Game.Models.Match>

<!DOCTYPE html>
<html>
<head>
    <title>Live Matches</title>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        th {
            background-color: #4CAF50;
            color: white;
        }

        a {
            text-decoration: none;
            color: #0066cc;
        }

            a:hover {
                text-decoration: underline;
            }

        .container {
            width: 90%;
            margin: 0 auto;
        }

        .live-indicator {
            color: red;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Live Matches <span class="live-indicator">• LIVE</span></h1>
        <p>
            <a href="/Matches/Index">All Matches</a> |
            <a href="/Matches/UpcomingMatches">Upcoming Matches</a> |
            <a href="/Matches/CompletedMatches">Completed Matches</a>
        </p>

        @if (Model.Any())
        {
            <table>
                <thead>
                    <tr>
                        <th>Tournament</th>
                        <th>Player 1</th>
                        <th>Player 2</th>
                        <th>Surface</th>
                        <th>Start Time</th>
                        <th>Current Score</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var match in Model)
                    {
                        <tr>
                            <td>@(match.Tournament?.Name ?? "Exhibition Match")</td>
                            <td>@match.Player1.Name</td>
                            <td>@match.Player2.Name</td>
                            <td>@match.Surface.Name</td>
                            <td>@match.StartTime.ToString("HH:mm")</td>
                            <td>@match.Player1Sets - @match.Player2Sets</td>
                            <td>
                                <a href="/Matches/Details/@match.Id">Match Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>There are no live matches at the moment.</p>
        }
    </div>
</body>
</html>